<a href="/dashboard">&larr;Back</a>
<div class="admin-title">
    <h2>Gestion des fichiers</h2>
</div>
<h3>Liste des fichiers</h3>
<% if (files) { %>
    <ul>
        <% files.forEach(file => { %>
            <li>
                <a href="/files/download/<%= file.filename %>"><%= file.filename %></a> - <%= file.length %> octets
                <form action="/files/delete/<%= file._id %>?_method=DELETE" method="post" style="display:inline;">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce fichier ?')">Supprimer</button>
                </form>
            </li>
        <% }) %>
    </ul>
<% } else { %>
    <p>Aucun fichier trouvé.</p>
<% } %>

<h3>Uploader un fichier</h3>
<form action="/files/upload" method="post" enctype="multipart/form-data">
    <input type="file" name="file" required>
    <button type="submit">Upload</button>
</form>